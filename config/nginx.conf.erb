daemon off;
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
  use epoll;
  accept_mutex on;
  worker_connections 2048;
}

http {
  gzip on;
  gzip_comp_level 6;
  gzip_min_length 512;
  gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
  gzip_vary on;
  gzip_proxied any;

  server_tokens off;

  access_log logs/access.log;
  error_log stderr error;

  include mime.types;
  types {
    application/json json;
  }
  default_type application/octet-stream;
  sendfile on;

  location = /static {
    add_header  Cache-Control "public, max-age=31536000, immutable";
  }

  location = /sw.js {
    add_header  Cache-Control "public, max-age=0, must-revalidate";
  }

  location ~* .(css|js|jpg|jpeg|png|gif|svg|ico|woff|eot|ttf) {
    add_header  Cache-Control "public, max-age=31536000, immutable";
  }

  location / {
    add_header  Cache-Control "public, max-age=0, must-revalidate";
  }

  # Must read the body in 5 seconds.
  client_body_timeout 5;

  server {
    listen <%= ENV['PORT'] %> reuseport;
    charset UTF-8;
    port_in_redirect off;
    keepalive_timeout 5;
    root public/;

    resolver 172.16.0.23 8.8.8.8;

    location / {
      try_files $uri $uri/index.html @madetech;
    }

    location @madetech {
      proxy_pass https://<%= ENV['MADETECH_HOST'] %>;
      proxy_ssl_server_name on;

      # Capture redirects for both http and https and map to proxy host
      proxy_redirect http://<%= ENV['MADETECH_HOST'] %>/ /;
      proxy_redirect https://<%= ENV['MADETECH_HOST'] %>/ /;
    }
  }
}
